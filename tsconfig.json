{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es2018",
    "module": "ES2022",
    "lib": ["dom", "es2018"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  }
}
